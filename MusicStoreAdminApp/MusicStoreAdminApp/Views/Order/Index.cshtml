@model List<MusicStoreAdminApp.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Owner ID</th>
            <th>Created At</th>
            <th>Number of Items</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OwnerId</td>
                    <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@(order.BoughtItems?.Count ?? 0)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">Details</a>
                        <a asp-action="CreateInvoice" asp-route-id="@order.Id" class="btn btn-info">Create Invoice</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No orders found</td>
            </tr>
        }
    </tbody>
</table>
