@model MusicStore.Domain.Domain.Album

<h2 class="mb-4">Album Details</h2>

<div class="card">
    <div class="row g-0">
        <!-- Album Image -->
        <div class="col-md-4">
            <img src="@Model.AlbumImageUrl" class="img-fluid rounded-start" alt="Album Image" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text"><small class="text-muted">Released on: @Model.ReleaseDate.ToShortDateString()</small></p>
                <p class="card-text">Price: $@Model.Price</p>
                <p class="card-text"><strong>Artist:</strong> @Model.Artist.Name</p>
            </div>
        </div>
    </div>
</div>

<h4 class="mt-4">Tracks</h4>

@if (Model.Tracks != null && Model.Tracks.Any())
{
    <ul class="list-group">
        @foreach (var track in Model.Tracks)
        {
            <li class="list-group-item d-flex align-items-center">
                <!-- Track Image -->
                <img src="@track.TrackImageUrl" alt="Track Image" class="rounded-circle me-3" style="width: 40px; height: 40px;" />
                <span>@track.Title</span>
            </li>
        }
    </ul>
}
else
{
    <p>No tracks just yet.</p>
}

<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
